{
  "toolUse": {
    "postToolUseHooks": [
      {
        "script": ".claude/hooks/validate-file.js",
        "enabled": true,
        "timeout": 30000
      }
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.agent-os/hooks/tdd-validator.sh \"$CLAUDE_HOOK_TOOL_PARAMETERS_file_path\""
          }
        ]
      }
    ]
  },
  "validation": {
    "autoFix": true,
    "failOnError": false,
    "parallelExecution": true
  }
}

{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Members",
    "description": "Company team member profiles"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "text",
      "required": true,
      "minLength": 2,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "role": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "bio": {
      "type": "richtext",
      "required": true,
      "minLength": 50,
      "maxLength": 1000,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "email": {
      "type": "email",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "linkedin": {
      "type": "string",
      "required": false,
      "maxLength": 255,
      "regex": "^https://([a-z]+\\.)?linkedin\\.com/in/[a-zA-Z0-9-]+/?$",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "order": {
      "type": "integer",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
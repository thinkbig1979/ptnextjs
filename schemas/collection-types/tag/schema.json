{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tags",
    "description": "Multi-purpose tagging system"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "text",
      "required": true,
      "unique": true,
      "maxLength": 50,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "required": false,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "color": {
      "type": "string",
      "required": false,
      "regex": "^#[0-9A-Fa-f]{6}$",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "usage_count": {
      "type": "integer",
      "required": false,
      "default": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "partners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::partner.partner",
      "mappedBy": "tags"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "tags"
    },
    "blog_posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "tags"
    }
  }
}
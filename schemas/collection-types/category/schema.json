{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Categories",
    "description": "Technology categories for partners and products"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "text",
      "required": true,
      "unique": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 20,
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "icon": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "color": {
      "type": "string",
      "required": true,
      "regex": "^#[0-9A-Fa-f]{6}$",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "order": {
      "type": "integer",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "partners": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::partner.partner",
      "mappedBy": "category"
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "category"
    }
  }
}
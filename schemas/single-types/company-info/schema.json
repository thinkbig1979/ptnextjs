{
  "kind": "singleType",
  "collectionName": "company_info",
  "info": {
    "singularName": "company-info",
    "pluralName": "company-infos",
    "displayName": "Company Information",
    "description": "Company-wide information and settings"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "text",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "tagline": {
      "type": "text",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": true,
      "minLength": 100,
      "maxLength": 1000,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "founded": {
      "type": "integer",
      "required": true,
      "min": 1800,
      "max": 2025,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "location": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "address": {
      "type": "richtext",
      "required": true,
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "phone": {
      "type": "string",
      "required": true,
      "regex": "^\\+?[1-9]\\d{1,14}$",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "email": {
      "type": "email",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "story": {
      "type": "richtext",
      "required": true,
      "minLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "social_media": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social-media",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
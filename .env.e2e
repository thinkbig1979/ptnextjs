# ============================================================================
# E2E TESTING ENVIRONMENT
# ============================================================================
# Used for running E2E tests against production build
# Usage: npm run start:e2e
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://ptnextjs:ptnextjs_dev_password@localhost:5432/ptnextjs
USE_POSTGRES=true

# ----------------------------------------------------------------------------
# Payload CMS Configuration
# ----------------------------------------------------------------------------
PAYLOAD_SECRET=your-secret-key-here-minimum-32-characters-long
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# E2E Testing Flags - All External Services Disabled/Mocked
# ----------------------------------------------------------------------------
# Disable rate limiting to prevent 429 errors
DISABLE_RATE_LIMIT=true

# Disable email sending (no real emails sent)
DISABLE_EMAILS=true

# Use mock geocoding data (no external Photon API calls)
MOCK_GEOCODING=true

# Disable captcha validation
NEXT_PUBLIC_DISABLE_CAPTCHA=true
DISABLE_CAPTCHA=true

# Mark as E2E test environment
E2E_TEST=true

# ----------------------------------------------------------------------------
# Email Configuration (disabled but configured for reference)
# ----------------------------------------------------------------------------
RESEND_API_KEY=re_disabled_for_testing
EMAIL_FROM_ADDRESS=test@localhost
ADMIN_EMAIL_ADDRESS=admin@localhost

# Pattern Discovery Metadata
# Auto-generated by pattern-discovery-analyst

generated_at: "{{GENERATED_TIMESTAMP}}"
generator_version: "1.0"
project_root: "{{PROJECT_ROOT}}"

# Analysis scope
analysis_scope:
  files_scanned: {{FILES_SCANNED}}
  directories_scanned: {{DIRECTORIES_SCANNED}}
  excluded:
    - node_modules/
    - .git/
    - dist/
    - build/
    - .next/
    - __pycache__/
    - venv/

# Project detection
project:
  type: "{{PROJECT_TYPE}}"
  framework: "{{FRAMEWORK}}"
  framework_version: "{{FRAMEWORK_VERSION}}"
  language: "{{LANGUAGE}}"

# Pattern detection results
patterns_detected:
  url_structure:
    detected: "{{URL_PATTERN}}"
    confidence: {{URL_CONFIDENCE}}
  naming_conventions:
    detected: "{{NAMING_PATTERN}}"
    confidence: {{NAMING_CONFIDENCE}}
  component_structure:
    detected: "{{COMPONENT_PATTERN}}"
    confidence: {{COMPONENT_CONFIDENCE}}
  state_management:
    detected: "{{STATE_PATTERN}}"
    confidence: {{STATE_CONFIDENCE}}
  api_patterns:
    detected: "{{API_PATTERN}}"
    confidence: {{API_CONFIDENCE}}
  authentication:
    detected: "{{AUTH_PATTERN}}"
    confidence: {{AUTH_CONFIDENCE}}
  form_handling:
    detected: "{{FORM_PATTERN}}"
    confidence: {{FORM_CONFIDENCE}}
  error_handling:
    detected: "{{ERROR_PATTERN}}"
    confidence: {{ERROR_CONFIDENCE}}
  testing_patterns:
    detected: "{{TESTING_PATTERN}}"
    confidence: {{TESTING_CONFIDENCE}}

# Key constraints for new features
constraints:
{{#each constraints}}
  - "{{this}}"
{{/each}}

# Refresh schedule
refresh:
  recommended_date: "{{REFRESH_DATE}}"
  threshold_days: 7
  auto_refresh: true

# Files generated
output_files:
{{#each output_files}}
  - "{{this}}"
{{/each}}

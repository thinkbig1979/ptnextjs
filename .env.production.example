# Production Environment Configuration
# Copy this file to .env.production for production builds

# Next.js Configuration
NODE_ENV=production
NEXT_OUTPUT_MODE=export
NEXT_DIST_DIR=out

# TinaCMS Configuration
TINA_CLIENT_ID=your_tina_client_id_here
TINA_TOKEN=your_tina_token_here
TINA_BRANCH=platform-vision-expansion

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Paul Thames Superyacht Technology"

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Performance Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# SEO Configuration
NEXT_PUBLIC_CANONICAL_URL=https://your-domain.com
NEXT_PUBLIC_DEFAULT_OG_IMAGE=https://your-domain.com/og-image.jpg
# ============================================================================
# DEVELOPMENT ENVIRONMENT TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Node Environment
# ----------------------------------------------------------------------------
NODE_ENV=development

# ----------------------------------------------------------------------------
# Testing & Development Flags
# ----------------------------------------------------------------------------
# Rate Limiting - disable for E2E testing to avoid 429 errors
DISABLE_RATE_LIMIT=true

# Email Sending - disable to prevent sending real emails during testing
# Also auto-disabled when E2E_TEST=true or PLAYWRIGHT_TEST=true
# DISABLE_EMAILS=true

# Geocoding API - use mock data instead of external Photon API
# Prevents rate limiting and external dependencies during testing
# MOCK_GEOCODING=true

# Captcha - disable for automated testing
# NEXT_PUBLIC_DISABLE_CAPTCHA=true
# DISABLE_CAPTCHA=true

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# Choose ONE of the following database configurations:

# Option 1: SQLite (default for quick local development)
# DATABASE_URL=file:./data/payload.db
# USE_POSTGRES=false

# Option 2: PostgreSQL via Docker (recommended for production-like development)
# Start with: docker compose up -d
DATABASE_URL=postgresql://ptnextjs:ptnextjs_dev_password@localhost:5432/ptnextjs
USE_POSTGRES=true

# PostgreSQL Docker Configuration (used by docker-compose.yml)
POSTGRES_USER=ptnextjs
POSTGRES_PASSWORD=ptnextjs_dev_password
POSTGRES_DB=ptnextjs
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Payload CMS Configuration
# ----------------------------------------------------------------------------
# Secret Key - REQUIRED, minimum 32 characters
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=REPLACE_ME_WITH_SECURE_SECRET_MINIMUM_32_CHARACTERS

# Server URLs
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Authentication & JWT
# ----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT Token Expiry
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=7d

# Optional: Separate JWT secrets for enhanced security
# If not set, derived from PAYLOAD_SECRET (backward compatible)
# JWT_ACCESS_SECRET=your-access-token-secret-minimum-32-characters
# JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters

# ----------------------------------------------------------------------------
# Admin Account
# ----------------------------------------------------------------------------
# Change immediately after first login
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!@#SecurePassword

# ----------------------------------------------------------------------------
# hCaptcha Configuration
# ----------------------------------------------------------------------------
# Get your keys from: https://dashboard.hcaptcha.com/
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key-here
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key-here

# ----------------------------------------------------------------------------
# Email Configuration (Resend)
# ----------------------------------------------------------------------------
# Get your API key from: https://resend.com/api-keys
# Verify your domain in Resend dashboard before sending emails
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM_ADDRESS=notifications@yourdomain.com
ADMIN_EMAIL_ADDRESS=admin@yourdomain.com

# ----------------------------------------------------------------------------
# Migration Configuration
# ----------------------------------------------------------------------------
MIGRATION_DRY_RUN=false
MIGRATION_BACKUP_DIR=./backups/migration
MIGRATION_LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Legacy: TinaCMS (being phased out)
# ----------------------------------------------------------------------------
# TINA_CLIENT_ID=your_tina_client_id_here
# TINA_TOKEN=your_tina_token_here

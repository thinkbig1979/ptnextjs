# Strapi CMS Configuration
# ========================
# Strapi CMS integration for Next.js application

# Next.js Configuration
NODE_ENV=development

# Strapi CMS Configuration
USE_STRAPI_CMS=true
NEXT_PUBLIC_USE_STRAPI_CMS=true
STRAPI_API_URL=http://localhost:1337/api
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337/api

# Content Fallback Control
# ========================
# When DISABLE_CONTENT_FALLBACK=true:
# - Disables static content fallback when CMS is unavailable
# - Returns empty/null data instead of static fallback data
# - Useful for production environments where content must come from CMS only
# Default: false (fallback enabled for backward compatibility)
DISABLE_CONTENT_FALLBACK=false
